import matplotlib.pyplot as plt

party = ['Lega','Pd','M5S','FdI','FI','LeU','IV','Az','+E','Ev','C!']
value = [24.8,20.6,16.5,15,6.9,3.2,2.8,2.7,2,1.6,1]
col = ['g','#ff6600','#ffff33','b','c','r','m','#000066','#808000','#00ff00','#ff9900']
exp = [0,0,0,0,0.1,0.2,0.2,0.2,0.5,0.5,0.8]

plt.title('Grafico preferenze a torta')
plt.pie(value,exp,party,col,'%.2f%%',shadow=True)
plt.show()
